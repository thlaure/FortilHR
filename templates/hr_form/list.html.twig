{% extends 'base.html.twig' %}

{% block title %}Back Office - {{ 'form'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/backoffice.css') }}">
{% endblock %}

{% block body %}
<div class="main-container backoffice">
    <div class="topbar">
        <div class="svg-container">
            <a class="stretched-link" href="{{ path('app_backoffice_index') }}">
                <img class="svg" src="{{ asset('svg/arrow-left-solid.svg') }}" alt="Left arrow SVG" width="40">
            </a>
        </div>
    </div>

    <section class="container">
        <h1 class="main-title">{{ 'forms'|trans }}</h1>

        {% include 'flash.html.twig' %}

        <table class="table">
            <thead>
                <tr>
                    <th class="table-cell">{{ 'title'|trans }}</th>
                    <th class="table-cell">{{ 'link'|trans }}</th>
                    <th class="table-cell">{{ 'actions'|trans }}</th>
                </tr>
            </thead>

            <tbody>
                {% for hr_form in hr_forms %}
                    <tr>
                        <td class="table-cell">{{ hr_form.title }}</td>
                        <td class="table-cell"><a href={{ hr_form.link }}>{{ hr_form.link }}</a></td>
                        <td class="table-cell">
                            <a class="btn btn--gradient btn--dashboard" href="{{ path('app_hrform_edit', {'id': hr_form.id}) }}">{{ 'edit'|trans }}</a>
                            <a class="btn btn--gradient btn--dashboard" href="{{ path('app_hrform_delete', {'id': hr_form.id}) }}">{{ 'delete'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
</div>
{% endblock %}

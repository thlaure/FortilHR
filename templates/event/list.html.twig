{% extends 'base.html.twig' %}

{% block title %}Back Office - {{ 'event'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/backoffice.css') }}">
{% endblock %}

{% block body %}
<div class="main-container backoffice">
    <div class="topbar">
        <div class="svg-container">
            <a class="stretched-link" href="{{ path('app_backoffice_index') }}">
                <img class="svg" src="{{ asset('svg/arrow-left-solid.svg') }}" alt="Left arrow SVG" width="40">
            </a>
        </div>

        {% include 'locales_buttons.html.twig' %}
    </div>

    <section class="container">
        <h1 class="main-title">{{ 'events'|trans }}</h1>

        {% include 'flash.html.twig' %}

        <table class="table">
            <thead>
                <tr>
                    <th class="table-cell">{{ 'name'|trans }}</th>
                    <th class="table-cell">{{ 'start'|trans }}</th>
                    <th class="table-cell">{{ 'end'|trans }}</th>
                    <th class="table-cell">{{ 'actions'|trans }}</th>
                </tr>
            </thead>

            <tbody>
                {% for event in events %}
                    <tr>
                        <td class="table-cell">{{ event.name }}</td>
                        <td class="table-cell">{{ event.startDate|date("d/m/Y H:i") }}</td>
                        <td class="table-cell">{{ event.endDate|date("d/m/Y H:i") }}</td>
                        <td class="table-cell">
                            <a class="btn btn--gradient btn--dashboard" href="{{ path('app_event_edit', {'id': event.id}) }}">{{ 'edit'|trans }}</a>
                            <a class="btn btn--gradient btn--dashboard" href="{{ path('app_event_delete', {'id': event.id}) }}">{{ 'delete'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
</div>
{% endblock %}

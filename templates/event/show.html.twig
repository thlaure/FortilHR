{% extends 'base.html.twig' %}

{% block title %} - {{ 'program'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/event.css') }}">
{% endblock %}

{% block body %}
<div class="main-container">
    <div class="topbar">
        <div class="svg-container">
            <a class="stretched-link" href="{{ path('app_home_index') }}">
                <img class="svg" src="{{ asset('svg/arrow-left-solid.svg') }}" alt="Left arrow SVG" width="40">
            </a>
        </div>

        {% include 'locales_buttons.html.twig' %}
    </div>

    <section class="container">
        <h1 class="main-title">{{ 'program'|trans }}</h1>

        <div class="event">
            <h2 class="event-title">{{ event.name }}</h2>
            <p class="small">{{ event.startDate|date("d/m/Y H:i") }} - {{ event.endDate|date("d/m/Y H:i") }}</p>
                {% if event.imageName %}
                <div class="event-image">
                    <img src="{{ asset("uploads/event/images/") ~ event.imageName }}" class="image" alt="Event illustration">
                </div>
                {% endif %}
            <p class="event-description">{{ event.program }}</p>
        </div>
    </section>
</div>
{% endblock %}

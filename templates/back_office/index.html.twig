{% extends 'base.html.twig' %}

{% block title %}Back Office{% endblock %}

{% block body %}
<div class="main-container backoffice">
    <section class="container">
        <h1 class="main-title">Fortil Event Back Office</h1>

        <article>
            <h2>{{ 'event'|trans }}</h2>

            <div class="btn-container">
                <a class="btn btn--gradient" href="{{ path('app_event_create') }}">{{ 'post'|trans }}</a>
                <a class="btn btn--gradient" href="{{ path('app_event_list') }}">{{ 'list'|trans }}</a>
            </div>
        </article>

        <article>
            <h2>{{ 'form'|trans }}</h2>

            <div class="btn-container">
                <a class="btn btn--gradient" href="{{ path('app_hrform_create') }}">{{ 'post'|trans }}</a>
                <a class="btn btn--gradient" href="{{ path('app_hrform_list') }}">{{ 'list'|trans }}</a>
            </div>
        </article>
    </section>
</div>
{% endblock %}
